@page "/MessageList/{dbcFileId}"
@inherits RazorPageBases.MessageListBase;


<MudTable Items="@messages" Style="width:50%">
    <ToolBarContent>
        <MudText Typo="Typo.h6">Messages</MudText>
        <MudSpacer />
    </ToolBarContent>
    <NoRecordsContent>
        No records found.
    </NoRecordsContent>
    <HeaderContent>
        <MudTh>CanMessageId</MudTh>
        <MudTh>Name</MudTh>
        <MudTh></MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="Id">@context.CanMessageId</MudTd>
            <MudTd DataLabel="Name">@context.Name</MudTd>
            <MudTd>
                <MudButton OnClick="() => OpenSignalListPage(context.Id)" Variant="Variant.Filled" Color="Color.Info" Size="Size.Small">Signals</MudButton>
            </MudTd>
        </RowTemplate>
        <PagerContent>
            <MudTablePager />
        </PagerContent>
</MudTable>
<MudGrid Justify="Justify.FlexStart">
    <MudItem>
        <MudButton StartIcon="@Icons.Material.Filled.Close" Variant="Variant.Filled" Color="Color.Default" OnClick="Close" Size="Size.Medium" Style="margin-top:30px;">Close</MudButton>
    </MudItem>
</MudGrid>